    <h1>コメント一覧</h1>
          <div>
              <div class="jscroll">
                  <% @posts.each do |post| %>
                      <table>
                            <tr>
                                  <td><%= attachment_image_tag post, :image, :fill, 200, 100, format: 'jpg' %></td>
                                    <td><span><%= post.town_name %></span></td>
                                    <td><span><%= post.comment %></td>
                                    <td><%= post.customer.name %></td>
                                    <td><%= link_to "編集する", edit_post_path(post.id) %></td>
                                        <td><%= link_to "削除する", post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？"  %></td>
                                   </tr>
                            </table>
                        <% end %>
                    </div>
                    <div>
                        <% @posts.each do |customer| %>
                              <% post.customer.each do |customer| %>
                                    <table>
                                          <tr>
                                              <td><%= customer.image %></td>
                                                  <td><span><%= post.town_name %></span></td>

                                                        <td><% if current_customer.following?(customer) %></td>
                                                        <td><%= customer.explanation %></td>
                                                        <td><%= "id: #{customer.id} explanation: #{customer.explanation}" %></td>
                                                  </tr>
                                            </table>
                                      <% end %>
                                  <% end %>
                                  <%= paginate @posts %>
                              </div>