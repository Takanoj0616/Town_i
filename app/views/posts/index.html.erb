

 <h1>コメント一覧</h1>
      <div class="jscroll">
          <% @posts.each do |post| %>
              <table>
                    <tr>
                          <td><%= attachment_image_tag post, :image, :fill, 200, 100, format: 'jpg' %></td>

                          <td><span><%= post.town_name %></span></td>

                          <td><span><%= post.comment %></td>

                          <td><%= post.customer.name %></td>
                    </tr>
                </table>
             <% end %>

                        <% @posts.each do |post| %>
                              <% post.contributor.each do |contributor| %>
                                    <table>
                                          <tr>
                                                <td><%= contributor.name %></td>

                                                <td><%= contributor.explanation %></td>

                                                <td><%= contributor.image %></td>
                                          </tr>
                                    </table>
                              <% end %>
                  <% end %>
            <%= paginate @posts %>
      </div>